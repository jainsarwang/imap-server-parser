{
  "compilerOptions": {
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}